<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backfon"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/backfon"
        android:visibility="gone"
        android:id="@+id/winnerLayout"
        android:gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="You Won!"
                android:textColor="#000"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="230dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    style="@style/GameButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:onClick="exitClick"
                    android:text="exit"
                    android:textSize="16sp" />
                <Button
                    style="@style/GameButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:onClick="newGameClick"
                    android:text="play"
                    android:textSize="16sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="320dp"
                android:layout_gravity="center"
                >

                <RelativeLayout
                    android:id="@+id/group"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="12dp"
                    android:layout_gravity="center">

                    <Button
                        android:id="@+id/bt1"
                        style="@style/GameButtonStyle"
                        android:text="1" />

                    <Button
                        android:id="@+id/bt2"
                        style="@style/GameButtonStyle"
                        android:layout_toRightOf="@id/bt1"
                        android:text="2" />

                    <Button
                        android:id="@+id/bt3"
                        style="@style/GameButtonStyle"
                        android:layout_toRightOf="@id/bt2"
                        android:text="3" />

                    <Button
                        android:id="@+id/bt4"
                        style="@style/GameButtonStyle"
                        android:layout_toRightOf="@id/bt3"
                        android:text="4" />

                    <Button
                        android:id="@+id/bt5"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt1"
                        android:text="5" />

                    <Button
                        android:id="@+id/bt6"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt2"
                        android:layout_toRightOf="@id/bt1"
                        android:text="6" />

                    <Button
                        android:id="@+id/bt7"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt1"
                        android:layout_toRightOf="@id/bt6"
                        android:text="7" />

                    <Button
                        android:id="@+id/bt8"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt1"
                        android:layout_toRightOf="@id/bt3"
                        android:text="89" />

                    <Button
                        android:id="@+id/bt9"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt5"
                        android:text="9" />

                    <Button
                        android:id="@+id/bt10"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt5"
                        android:layout_toRightOf="@id/bt1"
                        android:text="10" />

                    <Button
                        android:id="@+id/bt11"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt5"
                        android:layout_toRightOf="@id/bt2"
                        android:text="10" />

                    <Button
                        android:id="@+id/bt12"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt5"
                        android:layout_toRightOf="@id/bt3"
                        android:text="10" />

                    <Button
                        android:id="@+id/bt13"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt9"
                        android:text="13" />

                    <Button
                        android:id="@+id/bt14"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt9"
                        android:layout_toRightOf="@id/bt1"
                        android:text="10" />

                    <Button
                        android:id="@+id/bt15"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt9"
                        android:layout_toRightOf="@id/bt2"
                        android:text="15" />

                    <Button
                        android:id="@+id/bt16"
                        style="@style/GameButtonStyle"
                        android:layout_below="@id/bt9"
                        android:layout_toRightOf="@id/bt3"
                        />
                </RelativeLayout>



            </LinearLayout>


        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Time :"
                    android:textColor="#e2e4be"
                    android:textSize="30sp" />

                <Chronometer
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/textTimer"
                    android:textColor="#d6b251"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Record:"
                    android:textColor="#e2e4be"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:gravity="center"
                    tools:text="125"
                    android:id="@+id/record"
                    android:textColor="#d6b251"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Moves :"
                    android:textColor="#e2e4be"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/textScore"
                    android:text="000"
                    android:textColor="#d6b251"
                    android:textSize="30sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:text="Restart"
                android:textSize="25sp"
                android:textColor="#fff"
                android:background="@drawable/bg_button2"
                android:onClick="restartClick"
                android:gravity="center"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.2"
                android:layout_height="0dp"
                android:text="Finish"
                android:background="@drawable/bg_button2"
                android:textColor="#fff"
                android:textSize="25sp"
                android:onClick="finishClick"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

